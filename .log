# for rspec
# update the Gemfile
group :development, :test do
  gem "rspec-rails", "~> 6.0"
end

# run below command after every change in Gemfile
bundle install
rails generate rspec:install
bundle exec rspec

# to generate coverage report | see condition in file inside spec/spec_helper.rb
RAILS_ENV="test" bundle exec rspec





